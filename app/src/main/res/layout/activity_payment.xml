<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:rotation="90"
            android:src="@drawable/down_arrow"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Payment"
            android:textColor="#383A4F"
            android:textSize="25sp" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_light"
        android:layout_marginTop="100dp"
        android:layout_centerVertical="true"
        tools:text="RM10000"
        android:textStyle="bold"
        android:textColor="#CCA679"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_below="@id/toolbar" />

    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Due"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@id/amount" />

    <TextView
        android:id="@+id/payby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/total"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Pay by"
        android:textColor="#5F6392"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Epayby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payby"
        android:layout_marginLeft="20dp"
        android:ems="20"
        android:fontFamily="@font/roboto_light"
        tools:text="Name"
        android:textSize="25sp" />

    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Epayby" />

    <TextView
        android:id="@+id/paymentdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Epayby"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Payment Details"
        android:textColor="#5F6392"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Edetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentdetail"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        tools:text="Name"
        android:textSize="25sp" />

    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/Edetail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ordernumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Edetail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Order Number"
        android:textColor="#5F6392"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Eordernumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ordernumber"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        tools:text="Name"
        android:textSize="25sp" />

    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/Eordernumber" />

    <Button
        android:id="@+id/Bsave"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:text="Pay Now"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Eordernumber"
        />

</RelativeLayout>