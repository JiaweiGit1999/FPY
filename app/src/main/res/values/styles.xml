<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DrawerTextStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Nunito">
        <item name="android:fontFamily">@font/nunito_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Roboto">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RobotoBold">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NunitoBold">
        <item name="android:fontFamily">@font/nunito_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomCalendarMonth" parent="AppTheme">
        <item name="android:textColorPrimary">#5F6392</item>
        <item name="colorAccent">#C8E0FF</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#5F6392</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#5F6392</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/nunito_light</item>
    </style>
</resources>