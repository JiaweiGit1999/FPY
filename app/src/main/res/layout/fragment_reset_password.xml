<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@drawable/rounded_rectangle"
    tools:context=".ResetPassword">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/PasswordReset_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Please Enter Your Email"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <EditText
        android:id="@+id/PasswordReset_Email"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@id/PasswordReset_text"
        app:layout_constraintTop_toBottomOf="@id/PasswordReset_text" />

    <Button
        android:id="@+id/PasswordReset_Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Send Verification Email"
        app:layout_constraintLeft_toLeftOf="@id/PasswordReset_text"
        app:layout_constraintRight_toRightOf="@id/PasswordReset_text"
        app:layout_constraintTop_toBottomOf="@id/PasswordReset_Email" />

    <Button
        android:id="@+id/PasswordReset_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        app:layout_constraintLeft_toLeftOf="@id/PasswordReset_text"
        app:layout_constraintRight_toRightOf="@id/PasswordReset_text"
        app:layout_constraintTop_toBottomOf="@id/PasswordReset_Send" />

</androidx.constraintlayout.widget.ConstraintLayout>